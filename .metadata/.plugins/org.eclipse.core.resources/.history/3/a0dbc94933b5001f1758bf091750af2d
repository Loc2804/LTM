	<script type="text/javascript">
		function fillInfo(username, password, fullName, phone, add, age,gender,role) {
		 	document.querySelector('input[name="username"]').value = username;
		    document.querySelector('input[name="password"]').value = password;
		    document.querySelector('select[name="fullName"]').value = fullName;
		    document.querySelector('input[name="address"]').value = add;
		    document.querySelector('input[name="age"]').value = age;
		    document.querySelector('select[name="phonenumber"]').value = phone;
		    if(gender === 'Nam'){
		    	gender = 'male';
		    }
		    else gender = 'female';
		    console.log(gender);
		    document.querySelector('input[name="gender"]').value = gender;
		    document.querySelector('input[name="role"]').value = role;
		    document.querySelector('input[name="username"]').readOnly = true;
		    document.querySelector('input[name="password"]').readOnly = true;
		}
		function resetForm() {
		    document.querySelector('input[name="username"]').readOnly = false;
		    document.querySelector('input[name="password"]').readOnly = false;
		}

	</script>
